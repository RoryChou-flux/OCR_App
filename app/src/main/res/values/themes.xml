<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.Vision" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 保留原有的所有颜色设置 -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_container</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_container</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container</item>

        <!-- Tertiary brand color. -->
        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorOnTertiary">@color/on_tertiary</item>
        <item name="colorTertiaryContainer">@color/tertiary_container</item>
        <item name="colorOnTertiaryContainer">@color/on_tertiary_container</item>

        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        <item name="colorErrorContainer">@color/error_container</item>
        <item name="colorOnErrorContainer">@color/on_error_container</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant</item>

        <!-- Outline colors -->
        <item name="colorOutline">@color/outline</item>
        <item name="colorOutlineVariant">@color/outline_variant</item>

        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/on_surface</item>
        <item name="android:textColorSecondary">@color/on_surface_variant</item>

        <!-- Window background -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- NoActionBar theme -->
    <style name="Theme.Vision.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- FullScreen theme for camera -->
    <!-- 将 Theme.Vision.FullScreen 改为 Theme.Vision.Fullscreen -->
    <style name="Theme.Vision.Fullscreen" parent="Theme.Vision.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <!-- Splash Screen theme -->
    <style name="Theme.Vision.Splash" parent="Theme.Vision.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Dialog theme -->
    <style name="Theme.Vision.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Vision.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Vision.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Vision.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Vision.Button.Outlined</item>
    </style>

    <!-- Bottom Sheet Dialog theme -->
    <style name="Theme.Vision.BottomSheetDialog" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Vision.BottomSheet</item>
    </style>

    <!-- Component styles -->
    <style name="Widget.Vision.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearance">@style/ShapeAppearance.Vision.LargeComponent</item>
        <item name="backgroundTint">@color/surface</item>
    </style>

    <style name="Widget.Vision.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Vision.Button</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">2dp</item>
    </style>

    <style name="Widget.Vision.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.Vision.Button</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- 保留原有的所有 Shape Appearances -->
    <style name="ShapeAppearance.Vision.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.Vision.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.Vision.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.Vision.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">96sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.Vision.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.Vision.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.Vision.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.Vision.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/on_surface</item>
    </style>

    <style name="TextAppearance.Vision.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Vision.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_surface_variant</item>
    </style>

    <style name="TextAppearance.Vision.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/on_surface_variant</item>
    </style>

    <style name="TextAppearance.Vision.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_surface_variant</item>
    </style>

    <style name="TextAppearance.Vision.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/on_surface_variant</item>
    </style>

    <style name="TextAppearance.Vision.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/on_primary</item>
    </style>

    <style name="TextAppearance.Vision.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/on_surface_variant</item>
    </style>

    <style name="TextAppearance.Vision.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/on_surface_variant</item>
    </style>

    <!-- Dialog Styles -->
    <style name="MaterialAlertDialog.Vision.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/on_surface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialAlertDialog.Vision.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/on_surface_variant</item>
    </style>
</resources>